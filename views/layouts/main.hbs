            <div class="index__logo">
                <span class="index__element"></span>
                <span class="index__slogan">Юрист-на-Дону</span>
            </div>
            <div class="index__menu">
                <nav class="navbar navbar-expand-lg index__cm-menu-box">
                    <div class="container-fluid index__cm-fluid-box">
                        {{> humburger}}
