    <style>
      .admin__content {
        position: relative;
      }

      .admin__messager-box {
        position: absolute;
        right: 0;
        bottom: 0;
        border: 1px solid red;
      }

      .dashboard-menu__humburger {
        width: 60px;
        height: 100%;
        padding: 20px 0;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        cursor: pointer;
      }

      .dashboard-menu__humburger:hover,
      .dashboard-menu__humburger:focus {
        outline: none;
      }

      .dashboard-menu__humburger:hover .dashboard-menu__item:nth-child(1),
      .dashboard-menu__humburger:focus .dashboard-menu__item:nth-child(1) {
        transform: rotate(45deg) translate(12px, 12px);
      }

      .dashboard-menu__humburger:hover .dashboard-menu__item:nth-child(2),
      .dashboard-menu__humburger:focus .dashboard-menu__item:nth-child(2) {
        visibility: hidden;
      }

      .dashboard-menu__humburger:hover .dashboard-menu__item:nth-child(3),
      .dashboard-menu__humburger:focus .dashboard-menu__item:nth-child(3) {
        transform: rotate(-45deg) translate(15px, -16px);
      }

      .dashboard-menu__item {
        width: 100%;
        height: 8px;
        background: #0d6efd;
        margin: 5px auto;
        transition: all 0.3s ease;
      }

      @media screen and (min-width: 1400px) {
        .dashboard-menu {
          margin: 0 40px;
        }

        .dashboard-menu--repeating {
          margin: 7px 15px 0;
        }
      }

      .dashboard-menu--repeating {
        display: flex;
        width: 50px;
        height: 45px;
        float: right;
        border: 2px solid #fff;
        padding-bottom: 15px;
      }

      .dashboard-menu--repeating:hover {
        border: none;
      }

      .dashboard-menu__bento {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .dashboard-menu__block {
        display: inline-block;
        width: 10px;
        height: 10px;
        background: transparent;
        border: 2px solid #fff;
        margin: 3px;
      }

      .dashboard-menu__block:nth-child(1),
      .dashboard-menu__block:nth-child(3),
      .dashboard-menu__block:nth-child(4),
      .dashboard-menu__block:nth-child(5) {
        transition: all 0.3s ease;
      }

      .dashboard-menu__block:nth-child(1) {
        transform: translateX(6.5px) translateY(15px);
      }

      .dashboard-menu__block:nth-child(2) {
        opacity: 0;
      }

      .dashboard-menu__block:nth-child(3) {
        transform: translateX(-6.5px) translateY(15px);
      }

      .dashboard-menu__block:nth-child(4) {
        transform: translateX(-42px);
      }

      .dashboard-menu__block:nth-child(5) {
        transform: translateX(-38px);
      }

      .dashboard-menu__bento:hover .dashboard-menu__block,
      .dashboard-menu__bento:focus .dashboard-menu__block {
        opacity: 1;
      }

      .dashboard-menu__bento:hover .dashboard-menu__block:nth-child(1),
      .dashboard-menu__bento:focus .dashboard-menu__block:nth-child(1) {
        transform: none;
      }

      .dashboard-menu__bento:hover .dashboard-menu__block:nth-child(2),
      .dashboard-menu__bento:focus .dashboard-menu__block:nth-child(2) {
        transform: translateY(15px);
      }

      .dashboard-menu__bento:hover .dashboard-menu__block:nth-child(3),
      .dashboard-menu__bento:focus .dashboard-menu__block:nth-child(3) {
        transform: none;
      }

      .dashboard-menu__bento:hover .dashboard-menu__block:nth-child(4),
      .dashboard-menu__bento:focus .dashboard-menu__block:nth-child(4) {
        transform: translateX(-49px) translateY(30px);
      }

      .dashboard-menu__bento:hover .dashboard-menu__block:nth-child(5),
      .dashboard-menu__bento:focus .dashboard-menu__block:nth-child(5) {
        transform: translateX(-33px) translateY(30px);
      }

      .tab { /*!!!*/
        margin: 40px !important;
      }

      .tab__day {
        font-size: 17px;
      }

      .tab__content-box {
        position: relative;
      }

      .tab__item-box {
        margin-right: 1.5rem;
      }

      .tab__redirect,
      .tab__date {
        position: absolute;
        top: 0;
        z-index: 8;
      }

      .tab__redirect {
        left: 0;
      }

      .tab__date {
        right: 0;
      }

      .tab__day,
      .tab__redirect-link {
        padding-top: 1.3rem;
        color: #fff;
        font-size: 20px;
        font-weight: 700;
      }

      .tab__day {
        padding-right: 1rem;
      }

      .tab__redirect-link {
        text-transform: uppercase;
      }

      .tab__redirect-link:hover {
        color: #fff;
      }

      .tab__redirect-link:focus {
        box-shadow: none;
      }

      .tab__item-content {
        background: #0d6efd;
      }

      .tab__item {
        width: 200px;
        margin-bottom: .5rem;  
      }

      .tab__upload-data {
        margin-top: 100px;
        background: transparent;
      }

      .tab__input {
        font-size: 20px;
      }

      .tab__input--large {
        height: 81.6px;
        font-size: 22px;
      }

      .tab__input--downloaded span {
        display: inline-block;
        width: 100%;
        height: 100%;
        color: transparent;
        cursor: pointer;
      }

      .tab__input-box {
        position: relative;
      }

      .tab__input-text {
        display: flex;
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        padding: .375rem .75em;
        color: #fff;
        font-size: 20px;
        align-items: center;
        pointer-events: none;
      }

      .tab__panel-attr {
        position: absolute;
        top: 0;
        right: 0;
        z-index: 8;
      }

      .tab__date { /*!!!*/
        position: static !important;
      }

      input[type="file"] {
        display: none;
      }
    </style>
