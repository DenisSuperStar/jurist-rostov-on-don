<div class="container">
    <div class="row">
        {{#each cards}}
            <div class="col-4">
                <div class="box">
                    <div class="card self-card">
                        <img src="{{src}}" class="img-fluid self-card__img" alt="{{name}}">
                        <div class="card-body self-card__body">
                            <h5 class="card-title self-card__title">{{title}}</h5>
                            <p class="card-text self-card__text">
                                {{text}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>