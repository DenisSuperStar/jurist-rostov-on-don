<div class="container-fluid contact">
    <div class="row">
        <div class="col-5 contact__image-box">
            <div class="contact__bg-image"></div>
        </div>
        <div class="col-7 contact__form-box">
            <div class="contact__foundation-box">
                <div class="contact__icon"></div>
                <div class="contact__title-box">
                    <h2 class="contact__title">03 ____ Связь с нами</h2>
                </div>
                <form action="/" class="contact__contact-form" id="contactUs" name="sendUsForm" method="post">
                    <div class="contact__content-form">
                        <label class="form-label contact__input-box">
                            <input type="text" class="form-control contact__input" placeholder="Имя" name="name" required>
                        </label>
                        <label class="form-label contact__input-box">
                            <input type="email" class="form-control contact__input" placeholder="Email" name="email" required>
                        </label>
                    </div>
                    <div class="contact__wrapper-label">
                        <label class="form-label contact__input-box">
                            <input type="text" class="form-control contact__input" placeholder="Номер телефона" name="phone" required>
                        </label>
                    </div>
                    <div class="contact__btn-box">
                        <input type="submit" class="btn btn-light contact__btn is-send" value="Отправить">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>