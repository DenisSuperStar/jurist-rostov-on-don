<form class="row g-2 contact-form" id="contactForm" name="sendForm">
    <h3 class="contact-form__title">Оставьте заявку</h3>
    <div class="row g-2">
        <div class="col-6 contact-form__item">
            <label class="form-label contact-form__input-box">
                <div class="contact-form__name-box">
                    <span class="contact-form__input-name">Ваше имя</span>
                </div>
                <input type="text" class="form-control contact-form__input" placeholder="Имя" name="userName" required>
            </label>
        </div>
        <div class="col-6 contact-form__item">
            <label class="form-label contact-form__input-box">
                <div class="contact-form__name-box">
                    <span class="contact-form__input-name">E-mail</span>
                </div>
                <input type="text" class="form-control contact-form__input" placeholder="E-mail" name="userEmail" required>
            </label>
        </div>
    </div>
    <div class="row contact-form__item contact-form__item--full">
        <label class="form-label contact-form__input-box">
            <div class="contact-form__name-box">
                <span class="contact-form__input-name">Номер телефона</span>
            </div>
            <input type="text" class="form-control contact-form__input" placeholder="Телефон" name="userPhone" required>
        </label>
    </div>
    <div class="row contact-form__item contact-form__item--full">
        <label class="form-label contact-form__input-box">
            <div class="contact-form__name-box">
                <span class="contact-form__input-name">Ваше сообщение</span>
            </div>
            <textarea class="form-control contact-form__detail" rows="5" name="userMessage"></textarea>
        </label>
    </div>
    <div class="contact-form__btn-box">
        <input type="submit" class="btn contact-form__btn" id="is-send" value="Отправить">
    </div>
</form>