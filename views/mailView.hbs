<div class="container page__dashboard">
    <div class="row dashboard-box">
        <div class="col-12 dashboard">
            <div class="alert dashboard__title-box">
                <h1 class="alert-heading dashboard__title">{{title}}</h1>
            </div>
            {{#if persons}}
                {{#each persons}}
                    <div class="alert dashboard__user-info">
                        <h4 class="alert-heading dashboard__user-name">Имя клиента: {{this.userName}}</h4>
                        <p class="dashboard__user-message">Текст сообщения: {{this.userMessage}}</p>
                        <hr>
                        <p class="dashboard__user-email">Адрес эл.почты: {{this.userEmail}}</p>
                        <p class="dashboard__user-phone">{{this.userName}} оставил номер телефона: {{this.userPhone}}</p>
                    </div>
                {{/each}}
            {{else}}
                <div class="alert">
                    <h4 class="alert-heading">У вас пока нет заявок!</h4>
                </div>
            {{/if}}
        </div>
    </div>
</div>